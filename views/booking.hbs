    <script>
        function validateMobileNumber() {
            const mobileNumber = document.getElementById("BookingMobile").value;
            const mobileRegex = /^\d{10}$/; // Regular expression for exactly 10 digits

            if (mobileRegex.test(mobileNumber)) {
                return true; // Mobile number is valid
            } else {
                alert("Please enter a valid 10-digit mobile number.");
                return false; // Mobile number is invalid
            }
        }

        function validateService() {
            const serviceInput = document.getElementById("bookingService").value;
            const validServices = [
                "service",
                "repair",
                "denting",
                "oil service",
                "water wash",
                "adjustments", // Added a comma here
                "painting"
            ];

            if (validServices.includes(serviceInput.toLowerCase())) {
                return true; // Service is valid
            } else {
                alert("Please enter a valid service option: service, repair, denting, painting, oil service, water wash, or adjustments.");
                return false; // Service is invalid
            }
        }

        function validateVehicleNum() {
            const vehicleNumber = document.getElementById("bookingVechileNumber").value;
            // Regular expression to match a common vehicle number format, e.g., TN01AB1234
            const vehicleNumberRegex = /^[A-Z]{2}[ -]?[0-9]{2}[ -]?[A-Z]{1,2}[ -]?[0-9]{4}$/; // Modified regex

            if (vehicleNumberRegex.test(vehicleNumber)) {
                return true; // Vehicle number is valid
            } else {
                alert("Please enter a valid vehicle number (e.g., TN 56 L 1698 or TN 56 AZ 1698).");
                return false; // Vehicle number is invalid
            }
        }
    </script>



