    <script>
        function validateVehicleNum() {
            const vehicleNumber = document.getElementById("updatevnum").value;
            // Regular expression to match a common vehicle number format, e.g., TN01AB1234
            const vehicleNumberRegex = /^[A-Z]{2}[ -]?[0-9]{2}[ -]?[A-Z]{1,2}[ -]?[0-9]{4}$/; // Modified regex

            if (vehicleNumberRegex.test(vehicleNumber)) {
                return true; // Vehicle number is valid
            } else {
                alert("Please enter a valid vehicle number (e.g., TN 56 L 1698 or TN 56 AZ 1698).");
                return false; // Vehicle number is invalid
            }
        }
        
    </script>

